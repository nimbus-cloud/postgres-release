#!/bin/bash
set -eu

sudo apt-get install sshpass
sshpass -p <%= p("vcap_password") %> ssh -o "StrictHostKeyChecking=no" -o "UserKnownHostsFile=/dev/null" vcap@<%= p("slave.node") %> "/var/vcap/packages/postgres-<%= p("postgres_version") %>/bin/pg_ctl promote -D /var/vcap/store/postgres/postgres-<%= p("postgres_version") %>/"
